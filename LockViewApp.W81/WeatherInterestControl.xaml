<localw:InterestGathererControl
    x:Class="LockViewApp.W81.WeatherInterestControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LockViewApp.W81"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localw="using:LockViewApp.W81"
    mc:Ignorable="d"
    d:DesignWidth="383.5" Height="Auto">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="busyBar" Height="6" Margin="0" VerticalAlignment="Top" IsIndeterminate="True" Background="{x:Null}" BorderBrush="{x:Null}" Visibility="Collapsed"/>

        <StackPanel  Orientation="Vertical" d:LayoutOverrides="Height">
            <CheckBox Checked="checkBox_Checked" Unchecked="checkBox_Unchecked" x:Name="checkBox" Content="Select this interest" Height="36" VerticalAlignment="Stretch" FontFamily="Global User Interface" FontSize="21.333" Foreground="White" IsChecked="False"/>
            <TextBlock FontWeight="Light" x:Name="textBlock" Margin="3,10,0,0" TextWrapping="Wrap" FontSize="18.667">
            	<Run Text="Where are you?"/>
            	<LineBreak/>
            	<Run Foreground="Gray" Text="Get latest weather information, any time, anywhere."/>
            </TextBlock>
            <TextBox TextChanged="textBox_TextChanged" IsEnabled="{Binding IsChecked, ElementName=checkBox, Mode=OneWay}" x:Name="textBox" Margin="3,10,2,0" TextWrapping="Wrap" Text="" FontFamily="Global User Interface" FontSize="18.667" BorderBrush="White" SelectionHighlightColor="{StaticResource AccentBrush}" Background="{x:Null}" Foreground="White"/>
            <HyperlinkButton IsEnabled="{Binding ElementName=checkBox,Path=IsChecked}" Click="HyperlinkButton_Click" Content="Use my location" HorizontalAlignment="Left" Margin="-15,0,79,0" VerticalAlignment="Top" FontSize="18.667" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock FontWeight="Light" Margin="3,0" TextWrapping="Wrap" FontSize="18.667">
            	<Run Foreground="Gray" Text="Reverse geocoding powered by Nominatim."/>
            </TextBlock>
            <TextBlock FontWeight="Light" Margin="3,15,3,0" TextWrapping="Wrap" FontSize="18.667">
            	<Run Text="Metrics"/>
            	<LineBreak/>
            	<Run Foreground="Gray" Text="Sometimes it is just so hard to speak the other language."/>
            </TextBlock>
            <StackPanel HorizontalAlignment="Left" Margin="3,10,0,0">
                <RadioButton  IsEnabled="{Binding ElementName=checkBox,Path=IsChecked}" GroupName="metric" x:Name="useImperial" Content="Use imperial" VerticalAlignment="Top" d:LayoutOverrides="TopPosition, BottomPosition"/>
                <RadioButton IsEnabled="{Binding ElementName=checkBox,Path=IsChecked}" GroupName="metric" IsChecked="True" x:Name="useMetric" Content="Use metric" VerticalAlignment="Bottom" Margin="0,10,0,0" FontFamily="Global User Interface"/>
            </StackPanel>
            <TextBlock FontWeight="Light" x:Name="textBlock_Copy" Margin="3,15,3,0" TextWrapping="Wrap" FontSize="18.667">
            	<Run Text="Preview this content"/>
            	<LineBreak/>
            	<Run Foreground="Gray" Text="Request this interest and the image will be shown on the right."/>
            </TextBlock>
            <Button Click="button_Click" IsEnabled="{Binding IsChecked, ElementName=checkBox, Mode=OneWay}" x:Name="button" Content="Show Me" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Stretch"/>

        </StackPanel>

    </Grid>
</localw:InterestGathererControl>
