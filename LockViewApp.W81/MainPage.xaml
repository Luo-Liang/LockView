<Page
    x:Class="LockViewApp.W81.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InfoViewApp.WP81"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <local:ListBoxContentVMCollection x:Key="categories">
            <local:ListBoxContentVM NavigationPath="/ImageCropping.xaml?ImgSrc=library" SecondLine="Choose this if you would like to use the same image as your lock screen over time. In the next step we will let you pick one from your library." FirstLine="USE MY OWN IMAGE" />
            <local:ListBoxContentVM NavigationPath="/ImageCropping.xaml?ImgSrc=bing" SecondLine="Refresh your day with a new cover photo from Bing everyday. If you choose this option, you agree that all rights belong to the respective owners of the image." FirstLine="BING"/>
            <local:ListBoxContentVM NavigationPath="/ImageCropping.xaml?ImgSrc=nasa" SecondLine="Nothing is more beautiful than the mother universe. NASA Images enlight your day from the beginning. " FirstLine="NASA"/>
        </local:ListBoxContentVMCollection>
    </Page.Resources>

    <Grid Background="#FF1A1A1A">
        <Grid Height="308" VerticalAlignment="Top" HorizontalAlignment="Right" Width="817">
            <Rectangle HorizontalAlignment="Left" Height="116" Margin="183,0,0,0" VerticalAlignment="Top" Width="634">
                <Rectangle.Fill>
                    <SolidColorBrush Color="#FF926FD4"/>
                </Rectangle.Fill>
            </Rectangle>
            <Ellipse Margin="361,7,188,33" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition">
                <Ellipse.Fill>
                    <SolidColorBrush Color="{StaticResource LightAccentColor}"/>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Margin="377,20,196,43" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition">
                <Ellipse.Fill>
                    <SolidColorBrush Color="{StaticResource AccentColor}"/>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Margin="389,37,212,56" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition">
                <Ellipse.Fill>
                    <SolidColorBrush Color="{StaticResource DarkAccentColor}"/>
                </Ellipse.Fill>
            </Ellipse>
            <Path Data="M155,0 C197.802,1.5E-05 236.552,14.3829 264.602,37.6368 L268.936,41.4062 L272.71,39.7229 C286.169,34.106 300.967,31 316.5,31 C359.216,31 396.371,54.4893 415.422,89.0908 L415.901,90.0138 L418.225,87.3661 C438.805,65.0257 468.492,51 501.5,51 C522.858,51 542.826,56.8723 559.835,67.0699 L562.827,68.962 L563.458,67.9771 C587.09,32.9979 627.109,10 672.5,10 C745.125,10 804,68.8746 804,141.5 C804,214.125 745.125,273 672.5,273 L672,272.988 L672,308 L309,308 L309,252.734 L307.131,252.621 C285.505,250.861 265.613,243.067 249.189,230.948 L248.894,230.719 L247.739,231.472 C221.878,247.505 189.777,257 155,257 C69.3959,257 0,199.469 0,128.5 C0,57.5314 69.3959,1.5E-05 155,0 z" HorizontalAlignment="Left" Stretch="Fill" UseLayoutRounding="False" Width="804" Margin="14,0,-1,0">
                <Path.Fill>
                    <LinearGradientBrush EndPoint="0.878,-1.481" StartPoint="0.841,0.386">
                        <GradientStop Color="#FF1A1A1A" Offset="0"/>
                        <GradientStop Color="{StaticResource AccentColor}" Offset="1"/>
                    </LinearGradientBrush>
                </Path.Fill>
            </Path>
        </Grid>
        <TextBlock x:Name="textBlock" Height="99" Margin="144,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="40" FontWeight="Bold" HorizontalAlignment="Left" Width="275" d:LayoutOverrides="HorizontalAlignment">
        	<Run Text="LOCKVIEW "/>
        	<LineBreak/>
        	<Run Text="FOR DESKTOP"/>
        </TextBlock>
        <ScrollViewer x:Name="SettingViewer" Margin="40,152,43,90" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition">
            <Grid Width="{Binding ElementName=SettingViewer,Path=ActualWidth}" MaxHeight="{Binding ElementName=SettingViewer, Path=ActualHeight}" x:Name="ImageSourceSelectionMainGrid" HorizontalAlignment="Left">
                <Grid Width="380" HorizontalAlignment="Left">
                    <StackPanel Margin="2,0" Background="{StaticResource AccentBrush}" Height="103" d:LayoutOverrides="LeftPosition, RightPosition" VerticalAlignment="Top">
                        <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="Image Source" FontSize="24" Margin="10,10,10,5"/>
                        <TextBlock x:Name="textBlock1_Copy" TextWrapping="Wrap" FontSize="18.667" Margin="10,4,10,10">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{StaticResource LighterGray}"/>
                            </TextBlock.Foreground>
            				<Run Text="Where do you want us to pull the images?"/>
            				<LineBreak/>
            				<Run Text="Select a source from below."/>
                        </TextBlock>
                    </StackPanel>
                    <ListBox ItemsSource="{StaticResource categories}" x:Name="listBox" Background="{x:Null}" ItemContainerStyle="{StaticResource ListBoxItemStyle}" FontFamily="Global User Interface" ItemTemplate="{StaticResource ListBoxDataTemplate}" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition" Margin="0,123,0,-2"/>
                </Grid>
                <Grid x:Name="ImagePreviewTool" Margin="400,0,0,0" d:LayoutOverrides="LeftPosition, RightPosition">
                    <StackPanel Margin="2,0" d:LayoutOverrides="LeftPosition, RightPosition" VerticalAlignment="Top">
                        <TextBlock x:Name="textBlock2" TextWrapping="Wrap" Text="Pick a best view." FontSize="24" Margin="0,10,10,5" Foreground="{StaticResource LightAccentBrush}"/>
                        <TextBlock x:Name="textBlock1_Copy1" TextWrapping="Wrap" FontSize="18.667" Margin="0,4,10,10" Text="Look around. When you find a best view, click Ok. This is picking an image for your Lock Screen, the image is scaled appropriately.">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{StaticResource LighterGray}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>
                    <Image x:Name="imageCropper" Margin="0,103,0,0" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                </Grid>
            </Grid>
        </ScrollViewer>
        <Image x:Name="image" HorizontalAlignment="Left" Height="139" Margin="8,4,0,0" VerticalAlignment="Top" Width="139" Source="Assets/LockViewInApp.png"/>
    </Grid>
</Page>
